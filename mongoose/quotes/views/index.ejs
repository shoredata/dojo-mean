<body>

    <div id="wrapper">

        <a href="/">HOME</a>

        <div class="border fluid-container p-2">
            <h1>Welcome to the Quoting Dojo!</h1>
            <form action="/quotes" method="post">

                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="quote">Quote:</label>
                    <textarea class="form-control" rows="2" id="quote" name="quote"></textarea>
                </div>
                <div class="btn-group" role="group" aria-label="Quote Buttons">
                    <button type="submit" class="btn btn-outline-primary" name="add">Add Quote</button>
                    <button type="submit" class="btn btn-outline-success" name="list">List Quotes</button>
                </div>

                <% if(errors) { %>
                    <br><br>
                    <% if(typeof errors == "undefined") { %>
                        <%# Show some HTML herefsdfsdf %>
                    <% } else { %>
